<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.healthbridge.vitalis">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".util.application.HiltApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_launcherplay"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Vitalis"
        tools:targetApi="31">
        <activity
            android:name=".feature_communities.presentation.SpecificCommunityScreen"
            android:exported="false"
            android:label="@string/title_activity_specific_community_screen"
            android:theme="@style/Theme.Vitalis" />
        <activity
            android:name=".feature_communities.presentation.NewPostScreen"
            android:exported="false"
            android:label="@string/title_activity_new_post_screen"
            android:theme="@style/Theme.Vitalis" />
        <activity
            android:name=".feature_home.presentation.MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.Vitalis" />
        <activity
            android:name=".feature_communities.presentation.CommunitiesScreen"
            android:exported="false"
            android:label="@string/title_activity_communities_screen"
            android:theme="@style/Theme.Vitalis" />
        <activity
            android:name=".feature_bot.presentation.ChatScreen"
            android:exported="true"
            android:label="@string/title_activity_chat_screen"
            android:theme="@style/Theme.Vitalis" />
        <activity
            android:name=".feature_auth.ui.SignInScreen"
            android:exported="true"
            android:label="@string/title_activity_login_screen"
            android:theme="@style/Theme.Vitalis" />
        <activity
            android:name=".feature_auth.ui.SignUpScreen"
            android:exported="true"
            android:label="@string/title_activity_login_screen"
            android:theme="@style/Theme.Vitalis" />
        <activity
            android:name=".feature_auth.ui.AuthActivity"
            android:exported="true"
            android:label="@string/title_activity_login_screen"
            android:theme="@style/Theme.Vitalis" />
        <activity
            android:name=".feature_auth.ui.ChoiceScreen"
            android:exported="true"
            android:label="@string/title_activity_login_screen"
            android:theme="@style/Theme.Vitalis" />
        <activity
            android:name=".feature_auth.ui.OnboardScreen"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Auth">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>